@model Restoran.Core.DTOs.User.UserUpdateDto

@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <a href="@Url.Action("Users")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="UpdateUser" asp-route-id="@Model.Id" method="post">
                                <input asp-for="Id" type="hidden">
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="FirstName" class="form-label">Ad *</label>
                                            <input asp-for="FirstName" class="form-control" placeholder="Kullanıcının adı">
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="LastName" class="form-label">Soyad *</label>
                                            <input asp-for="LastName" class="form-control" placeholder="Kullanıcının soyadı">
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Username" class="form-label">Kullanıcı Adı *</label>
                                            <input asp-for="Username" class="form-control" placeholder="Benzersiz kullanıcı adı">
                                            <div class="form-text">Bu alan benzersiz olmalıdır.</div>
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">E-posta *</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Phone" class="form-label">Telefon</label>
                                            <input asp-for="Phone" type="tel" class="form-control" placeholder="0555 123 45 67">
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Role" class="form-label">Kullanıcı Rolü *</label>
                                            <select asp-for="Role" class="form-select">
                                                <option value="Customer">Müşteri</option>
                                                <option value="Admin">Admin</option>
                                            </select>
                                            <div class="form-text">Dikkatli kullanın! Admin rolü tüm yetkileri verir.</div>
                                            <span asp-validation-for="Role" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Uyarı:</strong> Şifre değişikliği için ayrı bir işlem yapılmalıdır. 
                                    Bu formda sadece kullanıcı bilgileri güncellenir.
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Users")" class="btn btn-secondary">İptal</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Güncellemeyi Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

