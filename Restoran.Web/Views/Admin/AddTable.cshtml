@model Restoran.Core.DTOs.Table.TableCreateDto

@{
    ViewData["Title"] = "Masa Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <a href="@Url.Action("Tables")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="AddTable" method="post">
                                <div class="mb-3">
                                    <label asp-for="TableNumber" class="form-label">Masa Numarası *</label>
                                    <input asp-for="TableNumber" class="form-control" placeholder="Örn: A1, B2, 1, 2">
                                    <div class="form-text">Her masa için benzersiz bir numara/kod giriniz.</div>
                                    <span asp-validation-for="TableNumber" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Capacity" class="form-label">Kapasite (Kişi Sayısı) *</label>
                                    <input asp-for="Capacity" type="number" min="1" max="20" class="form-control" 
                                           placeholder="Örn: 4" value="4">
                                    <div class="form-text">Bu masada kaç kişi oturabilir?</div>
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked>
                                        <label asp-for="IsAvailable" class="form-check-label">
                                            Masa müsait olarak işaretle
                                        </label>
                                    </div>
                                    <div class="form-text">İşaretlenmezse masa geçici olarak kullanım dışı olur.</div>
                                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Tables")" class="btn btn-secondary">İptal</a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save"></i> Masayı Kaydet
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

